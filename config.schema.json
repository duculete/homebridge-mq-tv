{
	"pluginAlias": "homebridge-mq-tv",
	"pluginType": "platform",
	"singular": true,
	"headerDisplay": "MQTT must be installed on your system",
	"footerDisplay": "For help please see the [README](https://github.com/duculete/homebridge-television.git).",
	"schema": {
		"name": {
			"title": "Name",
			"type": "string",
			"default": "TV",
			"required": true
		},
		"platform": {
			"title": "Platform",
			"type": "string",
			"default": "MqttTelevision",
			"required": true
		},
		"mqtt": {
			"title": "MQTT Config",
			"type": "object",
			"properties": {
				"server": {
					"title": "MQTT Broker URL:Port",
					"type": "string",
					"placeholder": "e.g. mqtt://192.168.1.xxx",
					"required": true
				},
				"username": {
					"title": "MQTT Username",
					"type": "string",
					"placeholder": "Your MQTT Broker username (optional)"
				},
				"password": {
					"title": "MQTT Password",
					"type": "string",
					"placeholder": "Your MQTT Broker password (optional)"
				},
				"port": {
					"title": "MQTT Broker listening port",
					"type": "integer",
					"placeholder": "1883",
					"default": true
				}

			}
		},
		"setActive": {
			"title": "MQTT topic used to set the TV power state",
			"type": "string",
			"default": "home/tv/cmd/power",
			"required": true
		},
		"getActive": {
			"title": "MQTT topic used to get the TV power state",
			"type": "string",
			"default": "home/tv/power",
			"required": true
		},
		"setActiveInput": {
			"title": "MQTT topic used to set TV input (ex: HDMI 1)",
			"type": "string",
			"default": "home/tv/cmd/input",
			"required": true
		},
		"getActiveInput": {
			"title": "MQTT topic used to get TV current TV sourcem input (ex: Netflix)",
			"type": "string",
			"default": "home/tv/input",
			"required": true
		},
		"setRemoteKey": {
			"title": "MQTT topic used to sent TV Key pres (using Apple Remote in status bar)",
			"type": "string",
			"default": "home/tv/cmd/remote",
			"required": false
		},
		"settingsTopic": {
			"title": "MQTT topic used to sync settings between plugin and ESP8266 controller",
			"type": "string",
			"default": "home/tv/settings",
			"required": false
		},
		"infoTopic": {
			"title": "MQTT topic used by ESP8266 controller to print extra info",
			"type": "string",
			"default": "home/tv/info",
			"required": false
		},
		"inputs": {
			"type": "array",
			"items": {
				"title": "TV Source Input Config",
				"type": "object",
				"properties": {
				    "name": {
						"title": "TV Source Input name",
						"type": "string",
						"default": "Input 1",
						"description": "Input name (as it will appear in HomeKit App, ex: Nextflix, HDMI 1, News Channel)"
					},
					"value": {
						"title": "TV Source input value",
						"type": "string",
						"default": "hdmi1",
						"description": "This value will be sent via mqtt using setActiveInput to TV; example: hdmi1, digitalTV, news_channel,netflix"
					}
				}
			}
		}		
	},
	"layout": [
		{
			"type": "fieldset",
			"items": [
				"name"
			]
		},
		{
			"type": "fieldset",
			"expandable": true,
			"title": "MQTT Config",
			"items": [
				{
					"type": "flex",
					"flex-flow": "row wrap",
					"items": [
						{
							"type": "flex",
							"items": [
								"mqtt.server"
							]
						}
					]
				},
				{
					"type": "flex",
					"flex-flow": "row wrap",
					"items": [
						{
							"type": "flex",
							"flex-flow": "column",
							"items": [
								"mqtt.username"
							]
						},
						{
							"type": "flex",
							"flex-flow": "column",
							"items": [
								"mqtt.password"
							]
						},
						{
							"type": "flex",
							"flex-flow": "column",
							"items": [
								"mqtt.port"
							]
						}
					]
				}
			]
		},
		{
			"type": "fieldset",
			"expandable": true,
			"title": "MQTT Topics",
			"items": [
				"setActive",
				"getActive",
				"setActiveInput",
				"getActiveInput",
				"settingsTopic",
				"infoTopic",
				"setRemoteKey"
			]
		},
		{
			"type": "fieldset",
			"expandable": true,
			"title": "Inputs",
			"items": [
				{
					"type": "array",
					"key": "inputs",
					"nodescription": true,
					"notitle": true,
					"minItems": 0,
					"items": [
						{
							"type": "fieldset",
							"expandable": true,
							"expanded": false,
							"title": "Input",
							"items": [
								"inputs[].name",
								"inputs[].value"
							]
						}
					]
				}
			]
		}
	]
}